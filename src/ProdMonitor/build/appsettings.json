{
  "Serilog": {
    "Using": [
      "Serilog.Expressions",
      "Serilog.Exceptions",
      "Serilog.Sinks.Console",
      "Serilog.Enrichers.Environment"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} <s:{SourceContext}> User: {EnvironmentUserName}, {NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/ProdMonitor.log",
          "formatter": {
            "type": "Serilog.Templates.ExpressionTemplate, Serilog.Expressions",
            "template": "{@t:yyyy-MM-dd HH:mm:ss.ffff}|{#if @l = 'Information'}INFO{#else if @l = 'Warning'}WARN{#else}{@l:u}{#end}|{@m}|{SourceContext}|User: {EnvironmentUserName}{#if @x is not null}|{ExceptionDetail['Type']}|{ExceptionDetail['Message']}|{ExceptionDetail['TargetSite']}|{@x}{#end}\n"
          },
          "rollingInterval": "Day"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithThreadId",
      "WithEnvironmentUserName",
      "WithOSVersion"
    ],
    "Properties": {
      "Application": "ProdMonitor"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "User ID=postgres;Password=admin;Server=localhost;Port=5432;Database=ProdMonitor"
  },

   "BusinessLogic": {
     "MinPasswordLength": 4
    }
}
