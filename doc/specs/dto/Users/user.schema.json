{
    "$schema": "https://json-schema.org/draft/2019-09/schema",
    "description": "Модель пользователя.",
    "required": [
        "id",
        "name",
        "surname",
        "fathername",
        "department",
        "email",
        "passwordHash",
        "passwordSalt",
        "dateOfBirth",
        "sex",
        "role"
    ],
    "properties": {
        "id": {
            "type": "string",
            "format": "uuid",
            "description": "Внутренний идентификатор пользователя."
        },
        "name": {
            "type": "string",
            "description": "Имя пользователя."
        },
        "surname": {
            "type": "string",
            "description": "Фамилия пользователя."
        },
        "fathername": {
            "type": "string",
            "description": "Отчество пользователя."
        },
        "department": {
            "type": "string",
            "description": "Отдел, в котором работает пользователь."
        },
        "email": {
            "type": "string",
            "format": "email",
            "description": "Электронная почта пользователя."
        },
        "passwordHash": {
            "type": "string",
            "format": "byte",
            "description": "Хэшированный пароль пользователя."
        },
        "passwordSalt": {
            "type": "string",
            "format": "byte",
            "description": "Соль для пароля пользователя."
        },
        "dateOfBirth": {
            "type": "string",
            "format": "date",
            "description": "Дата рождения пользователя."
        },
        "sex": {
            "type": "string",
            "enum": [
                "Male",
                "Female"
            ],
            "description": "Пол пользователя."
        },
        "role": {
            "type": "string",
            "enum": [
                "Admin",
                "Operator",
                "Specialist",
                "Verification"
            ],
            "description": "Роль пользователя."
        }
    }
}